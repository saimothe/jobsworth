<% else %>
  <p> <%= t("score_rules.no_rules", container: @container.class.to_s.humanize) %> </p>
  <p> <%= t("score_rules.new_html", link: link_to(t("shared.here"), new_container_score_rule_path(@container), :class => 'new-score-rule')) %>
<% end %>
