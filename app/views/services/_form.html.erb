<%= form_for(@service, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render 'shared/validation_errors', :object => f.object %>

  <div class="control-group">
    <label><%= t("services.name") %></label>
    <div class="controls">
      <%= f.text_field :name, :class => "input-xxlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label t("services.description") %>
    <div class="controls">
      <%= f.text_area :description, :class => "input-xxlarge", :cols => 5, :style => "height:100px;" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to t("button.cancel"), services_path, :class => "btn" %>
    <%= link_to t("button.destroy"), @service, confirm: t("shared.are_you_sure"), method: :delete, class: "btn btn-danger btn-mini pull-right" unless @service.new_record? %>
  </div>
<% end %>
