<% content_for :navigation do %>
  <%= render :partial => "companies/navigation", :locals => {:selected => "services"} %>
<% end %>

<legend>
  <%= t("services.services") %>
  <%= link_to t("services.new_service"), new_service_path, :class => "btn pull-right" %>
</legend>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th><%= t("services.name") %></th>
    <th></th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%= service.name %></td>
    <td><%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_service_path(service) %></td>
  </tr>
<% end %>
</table>

