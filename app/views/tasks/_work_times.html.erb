<fieldset>
  <legend><%= t("tasks.work_times") %></legend>

  <% work = @task.user_work -%>
  <% users = work.keys.sort_by { |u| u.name } -%>
  <% users.each do |user| -%>
    <div class="user clearfix">
        <label><%= user.name %></label>
        <span class="text-content"><%= TimeParser.format_duration(work[user]) %></span>
    </div>
  <% end -%>

</fieldset>
